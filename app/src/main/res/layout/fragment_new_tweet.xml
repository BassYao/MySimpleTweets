<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minHeight="500dp"
    tools:context="com.codepath.apps.mysimpletweets.NewTweetFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/llActionBar"

        android:background="@color/twitter">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/ibBack"
            android:background="@mipmap/ic_back"
            android:scaleType="fitCenter"/>

        <ImageView
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="fill_parent"
            android:id="@+id/ivTwitter"

            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"

            android:background="@mipmap/ic_launcher" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="140"
            android:id="@+id/tvStringLen"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/tertiary_text_light"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TWEET"
            android:id="@+id/btTweet"

            android:background="@color/twitter"
            android:textColor="#FFFFFF"
            android:maxLength="140" />


    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivProfileImage"

        android:layout_alignParentLeft="true"
        android:layout_below="@+id/llActionBar"
        android:padding="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"
        android:layout_gravity="left|top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bass"
        android:id="@+id/tvUserName"
        android:layout_below="@+id/llActionBar"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:layout_marginRight="5dp"
        android:textColor="@android:color/black"
        android:layout_gravity="left|top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@BassYao"
        android:id="@+id/tvName"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/ivProfileImage"
        android:layout_toRightOf="@+id/ivProfileImage"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:textColor="@android:color/darker_gray"

        android:layout_below="@+id/tvUserName"
        android:gravity="center_vertical"
        android:layout_gravity="left|top" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etBody"
        android:layout_below="@+id/ivProfileImage"
        android:layout_alignLeft="@+id/ivProfileImage"
        android:layout_alignStart="@+id/ivProfileImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/tweet_hint" />


</RelativeLayout>
